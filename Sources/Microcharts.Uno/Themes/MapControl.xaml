<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microcharts.Uno">
    <Style TargetType="local:MapControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MapControl">
                    <Grid Background="{ThemeResource MyBackgroundThemeBrush}">
                        <ContentPresenter x:Name="ContentPresenterMapView" Content="{TemplateBinding MapView}" />
                        <ContentPresenter x:Name="ContentPresenterMapViewGL" Content="{TemplateBinding MapViewGL}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
